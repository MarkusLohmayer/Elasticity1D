% define title page
\setbeamertemplate{title page}{
  \setlength{\unitlength}{1mm}
  \begin{picture}(254,190.5)(17.4,0)
    % background image
    \put(0,55.4){
      \pgfuseimage{fauschloss}
    }
    % horizontal rule
    %\put(0,55.4){\color{faublue}\rule{\paperwidth}{4mm}}
    % presentation title
    \put(17.4,110.7){
      \begin{minipage}[b][45mm][t]{226mm}
        \usebeamerfont{title}{\raggedright\inserttitle\par}
      \end{minipage}
    }
    % author, date, ..
    \put(17.4,66){
      \begin{minipage}[b][30mm][b]{160mm}
        \fontsize{18}{22}\selectfont % font size and line spacing
        \ifx\insertauthor\empty\else
          \insertauthor
	    \fi
	    \ifx\insertdate\empty\else
          \newline\insertdate
        \fi
        \ifx\insertinstitute\empty\else
          \newline\insertinstitute
	    \fi
      \end{minipage}
    }
    % box below at the left end
    \put(17.4,0){
      \begin{minipage}[b][37.5mm][c]{125.45mm}
        \raggedright % Ausrichtung am rechten Rand
        \color{black}
        \fontsize{16}{20}\selectfont % font size and line spacing
        \usebeamertemplate{projectbox}
      \end{minipage}
    }
    % box below at the right end with FAU logo
    \put(153.45,0){
      \begin{minipage}[b][37.5mm][c]{89.95mm}
        \raggedleft % align left
        \pgfuseimage{faulogo}
      \end{minipage}
    }
  \end{picture}
}


